---
import './MyServices.css';
import Code from "../icons/Code.astro";
import Palette from "../icons/Palette.astro";
import Server from "../icons/Server.astro";
import Cloud from "../icons/Cloud.astro";
---

<section class="service">
    <h2>What I'm Doing</h2>
    <ul class="service-list">
        <li class="service-item">
            <div class="icon-box-service">
                <Code />
            </div>
            <div class="service-info">
                <h3 class="service-title">Web development</h3>
                <p>
                    High-quality development of sites at the professional level.
                </p>
            </div>
        </li>
        <li class="service-item">
            <div class="icon-box-service">
                <Cloud />
            </div>
            <div class="service-info">
                <h3 class="service-title">DevOps</h3>
                <p>
                    Hands-on experience with Docker, CI/CD workflows, and basic
                    cloud infrastructure to support modern web applications.
                </p>
            </div>
        </li>
        <li class="service-item">
            <div class="icon-box-service">
                <Palette />
            </div>
            <div class="service-info">
                <h3 class="service-title">UI/UX Design</h3>
                <p>
                    The most modern and high-quality design made at a
                    professional level.
                </p>
            </div>
        </li>
        <li class="service-item">
            <div class="icon-box-service">
                <Server />
            </div>
            <div class="service-info">
                <h3 class="service-title">Backend Development</h3>
                <p>
                    High-performance backend services designed for scalability
                    and seamless user experience.
                </p>
            </div>
        </li>
    </ul>
</section>
